<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppConteo.ArticulosPage">

    <ScrollView>
        <StackLayout>
            <Label Text="Artículos de inventario" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"/>
            <Entry Placeholder="Buscar por código o descripción" x:Name="txtBuscar" Text="" VerticalOptions="Center"/>
            <ListView x:Name="listaArticulos"/>
            <Button Text="Limpiar búsqueda" x:Name="btnLimpiar" HorizontalOptions="Center" />
        </StackLayout>
    </ScrollView>

</ContentPage>